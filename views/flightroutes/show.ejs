<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="\CSS\star.css">
<div class="row">
    <div class="col-6 offset-3">
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= flightroute.origin %>  --> <%= flightroute.destination %> by <%= flightroute.airline %>
                        </h5>
                        <p class="card-text">
                            Price is: <%= flightroute.price %> USD
                        </p>
                        <p class="card-text">
                            Depart at: <%= flightroute.date %>
                        </p>
                        <p class="card-text">
                            Direct flight: <%= flightroute.direct %>
                        </p>
                    </div>
                    <div class="btn-group m-2">
                        <a class="btn btn-info" href="/flightroutes/<%= flightroute._id %>/edit">Edit</a>
                        <form action="/flightroutes/<%=flightroute._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <a class="btn btn-success" href="/flightroutes">Back</a>
                    </div>
                </div>
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form action="/flightroutes" method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
            <fieldset class="starability-heart">
                <legend>First rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review Comments:</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>
